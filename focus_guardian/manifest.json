{
  "manifest_version": 3,
  "name": "Focus Guardian",
  "version": "1.0",
  "description": "Stay focused with smart nudges and break reminders.",
  "permissions": [
    "tabs",
    "alarms",
    "notifications",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}